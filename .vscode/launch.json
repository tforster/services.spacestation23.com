{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "wp",
      "envFile": "${workspaceFolder}/src/wp/.env",
      "cwd": "${fileDirname}",
      "program": "${workspaceFolder}/src/wp/node_modules/serverless/bin/serverless.js",
      "args": [
        "offline"
      ],
      "runtimeArgs": [
        "--preserve-symlinks"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "stopOnEntry": false
    }
  ]
}
